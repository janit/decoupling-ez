{% extends 'pagelayout.html.twig' %}

{% block content %}
<!-- Header -->
<header class="below-navbar">
    <div class="container">
        <div class="row" id="banner">
            <div class="col-xs-12">
                <div class="banner-header-block">
                    <img src="/static/images/logo_just_letters.png" style="width: 100%;">
                    <h3 class="banner-header">{{ ez_render_field(content,'name') }}</h3>
                </div>
            </div>
        </div>
    </div>
</header>

    <section class="buttons">
    <div class="container">
        <div class="row regular-content-size">
            <div class="col-xs-6 col-xs-offset-3">

                {{ ez_render_field(content,'description') }}

            </div>
        </div>
    </div>
    </section>

<div id="app">
    {% raw %}

        <section class="buttons">
            <div class="container">
                <div class="row regular-content-size">
                    <div class="col-xs-6 col-xs-offset-3">

                        <div class="alert alert-info fade in">{{ message }}</div>

                        <h4 class="center bottom">Find a Ride:</h4>
                        <div class="input-group custom-search-form">
                            <input v-model="searchWord" type="text" class="form-control">
                                <span class="input-group-btn">
                                    <button  v-on:click="refreshBikerideList" class="btn btn-default" type="button">
                                        <span class="glyphicon glyphicon-search"></span>
                                    </button>
                                </span>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <section class="buttons">
            <div class="container">
                <div class="row regular-content-size">
                    <div class="col-xs-10 col-xs-offset-1 box-style">
                        <h3 class="center bottom-plus new-header">List of all Rides</h3>
                        <table class="table table-hover">
                            <thead>
                            <tr class="table-header">
                                <th>Ride</th>
                                <th></th>
                                <th>From - To</th>
                                <th>Distance</th>
                                <th>Level</th>
                            </tr>
                            </thead>
                            <tbody>
                            <tr v-for="ride in rides">
                                <td>
                                    <img v-bind:src="ride.image" style="width: 100%;">
                                </td>
                                <td>
                                    <h3 class="header-link-table"><strong><a href="#" target="_self">{{ ride.title }}</a></strong></h3>
                                    <p class="pre-small">{{ ride.author }}</p>
                                </td>
                                <td>
                                    <p>{{ ride.starting_point }} - {{ ride.ending_point }}</p>
                                </td>
                                <td>
                                    <p>{{ ride.length }}</p>
                                </td>
                                <td>
                                    <p>{{ ride.difficulty_level }}</p>
                                </td>
                            </tr>
                            </tbody>
                        </table>

                    </div>
                </div>
            </div>
        </section>

        <section class="buttons">
            <div class="container">
                <div class="row regular-content-size">
                    <div class="col-xs-6 col-xs-offset-3">

                        <h4 class="center bottom">Add a new ride</h4>
                        <div class="input-group custom-search-form">

                            <input v-model="newRide.title" placeholder="title" type="text" class="form-control" required>
                            <button v-on:click="createNewRide" class="btn btn-default" type="button">
                                Create a new ride
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </section>

    {% endraw %}
</div>
{% endblock %}